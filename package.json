{
  "name": "@openworklabs/filecoin-message",
  "version": "0.0.14",
  "description": "The Filecoin message type, used to transfer tokens and make state changes.",
  "main": "./dist/index.js",
  "scripts": {
    "build-browser": "cross-env BABEL_ENV=browser babel ./src --out-dir ./lib --source-maps --copy-files",
    "build-module": "cross-env BABEL_ENV=module babel ./src --out-dir ./module --source-maps --copy-files",
    "build-node": "babel ./src --out-dir ./dist --source-maps --copy-files",
    "build": "tsc",
    "lint": "tslint -p tsconfig.json",
    "prepare": "npm run build",
    "prepublishOnly": "npm test && npm run lint",
    "test": "npm run build && jest",
    "test:watch": "npm run build && jest --watch"
  },
  "author": "Open Work Labs",
  "license": "(Apache-2.0 OR MIT)",
  "dependencies": {
    "@openworklabs/filecoin-address": "0.0.10",
    "@openworklabs/filecoin-number": "0.0.9",
    "bignumber.js": "^9.0.0"
  },
  "devDependencies": {
    "@types/jest": "^26.0.10",
    "babel-eslint": "10.0.3",
    "cross-env": "6.0.3",
    "jest": "^26.0.1",
    "prettier": "1.19.1",
    "ts-jest": "^26.2.0",
    "tslint": "^6.1.3",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^4.0.2"
  },
  "files": [
    "dist",
    "lib",
    "module"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/openworklabs/filecoin-message"
  }
}
